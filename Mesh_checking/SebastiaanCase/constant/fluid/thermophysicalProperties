FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      thermophysicalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Define the thermodynamic model for the fluid region
thermoType
{
    type            heRhoThermo;
    thermo          hConst;
}

// Transport model
mixture
{
    transport       Newtonian;

    // Thermodynamic properties
    thermodynamics
    {
        T0          300;
        p0          101325;
    }

    // Species
    species
    {
        CO2
        {
            molarMass  44.01;
            Cp         850;
        }
        H2O
        {
            molarMass  18.015;
            Cp         4186;
        }
    }
}
