#!/bin/sh

# Source tutorial run functions
. $WM_PROJECT_DIR/bin/tools/RunFunctions

usage() {
        echo ""
        echo "Usage:"
        echo "($0 [-p or --partitioned | -m or --monolithic] [-S or --serial | -P or --parallel]"
        echo ""
        exit 0
}

# $@ is all command line parameters passed to the script.
# -o is for short options like -v
# -l is for long options with double dash like --version
# the comma separates different long options
# -a is for long options with single dash like -version
options=$(getopt -l "help,partitioned,monolithic:,serial,parallel" -o "hpm:SP" -a -- "$@")

# set --:
# If no arguments follow this option, then the positional parameters are unset.
# Otherwise, the positional parameters are set to the arguments, even if some
# of them begin with a ‘-’.
eval set -- "$options"

no_args=1

while true
do
    case $1 in

        -h|--help)
            usage
            exit 0
            ;;

        -p|--partitioned)
            no_args=0

            cp 0/fluid/orig/* 0/fluid/. 2>/dev/null
            cp 0/solid/orig/* 0/solid/. 2>/dev/null
            cp 0/fluid/orig/partitioned/* 0/fluid/.
            cp 0/solid/orig/partitioned/* 0/solid/.

            cp constant/regionInterfacePropertiesPartitioned constant/regionInterfaceProperties
    	    cp system/fluid/createPatchDictPartitioned system/fluid/createPatchDict
    	    cp system/solid/createPatchDictPartitioned system/solid/createPatchDict

	       ./makeMesh

            runApplication -s fluid.txt makeFaMesh -region fluid
            runApplication -s solid.txt makeFaMesh -region solid 2>/dev/null

            ;;

        -m|--monolithic)
            no_args=0

            cp 0/fluid/orig/* 0/fluid/. 2>/dev/null
            cp 0/solid/orig/* 0/solid/. 2>/dev/null
            cp 0/fluid/orig/monolithic/* 0/fluid/.
            cp 0/solid/orig/monolithic/* 0/solid/.

            cp constant/regionInterfacePropertiesMonolithic constant/regionInterfaceProperties
    	    cp system/fluid/createPatchDictMonolithic system/fluid/createPatchDict
    	    cp system/solid/createPatchDictMonolithic system/solid/createPatchDict

	       ./makeMesh

            runApplication -s solid setSet -region solid -batch solid.setSet 2>/dev/null
            runApplication -s solid setsToZones -region solid -noFlipMap 2>/dev/null

            runApplication setSet -region fluid -batch fluid.setSet 2>/dev/null
            runApplication setsToZones -region fluid -noFlipMap 2>/dev/null

            runApplication makeFaMesh -region fluid 2>/dev/null
            runApplication -s solid makeFaMesh -region solid 2>/dev/null

            ;;

        -S|--serial)
            no_args=0

            runApplication multiRegionFoam 2>/dev/null

            ;;

        -P|--parallel)
            no_args=0

            runApplication -s fluid decomposePar -region fluid
            runApplication -s solid  decomposePar -region solid

            mpirun -np 8 multiRegionFoam -parallel 2>&1 > log.multiRegionFoam
            ;;

        --)
            shift
            break;;
    esac
    shift
done

if [ "$no_args" -eq 1 ]; then
    usage
    exit 1
fi
