FoamFile
{
    version         2.0;
    format          ascii;
    class           volScalarField;
    object          T;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 0 0 1 0 0 0];

internalField   uniform 293.15;

boundaryField
{
    fluid_to_solid
    {
        type                    regionCoupledScalarJump;
        interfaceType          	defaultInterface;
        k                       "k";

        accType                 aitken;
        relax                   1.0;

        // accType              aitken;
        // relax                0.75;

        // accType              IQN-ILS;
        // relax                0.75;
        // couplingReuse        0; //2;


        neighbourRegionName     solid;
        neighbourPatchName      solid_to_fluid;
        neighbourFieldName      T;
        secondOrder             false;
        nonOrthCorr             true;
        value                   $internalField;
    }
}

