FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       dictionary;
    location    "system/solid";
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
pointSync     true; 

patches
(
    {
        name            sides;
        patchInfo
        {
            type        patch;
	}
        constructFrom   set;
        set             sides;
    }

    {
        name            solid_to_fluid;
        patchInfo
        {
            type        patch;
	}
        constructFrom   set;
        set             solid_to_fluid;
    }
);

