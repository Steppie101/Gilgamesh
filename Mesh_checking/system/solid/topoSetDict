FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       dictionary;
    location    "system/solid";
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
actions
(
    // Step 1: Create a set for all cells in the mesh using cellToCell
    {
        name    allCells;        // Name of the set
        type    cellSet;         // Type is cellSet
        action  new;             // Action is to create a new set
        source  cellToCell;      // Select all cells from the mesh
    }

    // Step 2: Create a cell zone from the "allCells" set
    {
        name    fullMeshZone;    // Name of the new cell zone
        type    cellZoneSet;     // Type is cellZoneSet
        action  new;             // Action to create a new cell zone
        source  setToCellZone;   // Use the "allCells" set to create the zone
        sourceInfo
        {
            set   allCells;      // Reference the "allCells" set explicitly here
        }
    }
);